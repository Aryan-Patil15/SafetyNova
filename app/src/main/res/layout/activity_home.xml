<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".home">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_menu_24" />

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="SafetyNova"
            android:textColor="#000036"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/toolbar_icons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/notification_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_notifications_24" />

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_person_24" />
        </LinearLayout>
    </RelativeLayout>

    <!-- Safety Alerts Section -->

    <!-- Main Body with Buttons -->

    <!-- Bottom Navigation -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_edittext"
        android:padding="16dp">

        <TextView
            android:id="@+id/safety_alert_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Alerts"
            android:textColor="#B8860B"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/safety_alert_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safety_alert_title"
            android:text=""
            android:textColor="#555555"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/alert_buttons"
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/safety_alert_body"
            android:layout_marginTop="9dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="145dp"
                android:backgroundTint="#FF6347"
                android:text="View"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_dismiss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FF6347"
                android:text="Dismiss"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="44dp">

        <ImageView
            android:id="@+id/main_logo"
            android:layout_width="500dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_logo"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_emergency_location"
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_marginEnd="15dp"
                android:layout_weight="1"
                android:backgroundTint="#a81c07"
                android:text="Emergency Location Sharing"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btn_emergency_services"
                android:layout_width="0dp"
                android:layout_height="59dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:backgroundTint="#a81c07"
                android:text="Emergency Services"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingBottom="30dp">

        <ImageButton
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="home"
            android:src="@drawable/baseline_home_24" />

        <ImageButton
            android:id="@+id/nav_maps"
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="location"
            android:src="@drawable/baseline_location_pin_24" />

        <ImageButton
            android:id="@+id/nav_messages"
            android:layout_width="0dp"
            android:layout_height="97dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="message"
            android:src="@drawable/baseline_message_24" />

    </LinearLayout>

</RelativeLayout>
